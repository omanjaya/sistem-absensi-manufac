APP_NAME="Sistem Absensi API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# PostgreSQL Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=absensi_db
DB_USERNAME=postgres
DB_PASSWORD=

# Broadcasting
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if needed for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite (for asset compilation)
VITE_APP_NAME="${APP_NAME}"

# Face Recognition Service Configuration
FACE_SERVICE_URL=http://localhost:5000
FACE_SERVICE_TIMEOUT=30
FACE_RECOGNITION_TOLERANCE=0.6

# Office Location Configuration (Jakarta)
OFFICE_LATITUDE=-6.2088
OFFICE_LONGITUDE=106.8456
OFFICE_RADIUS=100

# Attendance Configuration
WORK_START_TIME=08:00
WORK_END_TIME=17:00
LATE_THRESHOLD_MINUTES=15
EARLY_CHECKOUT_THRESHOLD_MINUTES=30
OVERTIME_THRESHOLD_HOURS=8
OVERTIME_RATE_MULTIPLIER=1.5

# File Upload Configuration
MAX_PHOTO_SIZE=2048
ALLOWED_PHOTO_TYPES=jpg,jpeg,png

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000
SESSION_DOMAIN=localhost

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Salary Configuration
OVERTIME_RATE_PER_HOUR=25000
TAX_RATE=0.05
DEFAULT_BASIC_SALARY=5000000
ABSENT_DAY_DEDUCTION_RATE=1.0
LATE_PENALTY_AMOUNT=50000
MAX_LATE_PENALTY_DAYS=5

# Allowance Configuration
TRANSPORT_ALLOWANCE=500000
MEAL_ALLOWANCE=300000
COMMUNICATION_ALLOWANCE=200000

# Additional configuration
MEMCACHED_HOST=127.0.0.1
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}" 